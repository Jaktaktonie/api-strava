                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "ActivityResource": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "user_id": {
                        "type": "integer"
                    },
                    "title": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "run",
                            "ride",
                            "walk"
                        ]
                    },
                    "start_time": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "end_time": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "duration_seconds": {
                        "type": "integer",
                        "nullable": true
                    },
                    "distance_meters": {
                        "type": "integer"
                    },
                    "distance_km": {
                        "type": "number",
                        "format": "float"
                    },
                    "avg_speed_kmh": {
                        "type": "number",
                        "format": "float",
                        "nullable": true
                    },
                    "avg_pace": {
                        "type": "number",
                        "format": "float",
                        "nullable": true
                    },
                    "route": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "lat": {
                                    "type": "number",
                                    "format": "float"
                                },
                                "lng": {
                                    "type": "number",
                                    "format": "float"
                                }
                            },
                            "type": "object"
                        },
                        "nullable": true
                    },
                    "notes": {
                        "type": "string",
                        "nullable": true
                    },
                    "photo_url": {
                        "type": "string",
                        "nullable": true
                    },
                    "gpx_path": {
                        "type": "string",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "ActivityRequest": {
                "required": [
                    "title",
                    "type",
                    "start_time",
                    "distance_meters"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Morning Run"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "run",
                            "ride",
                            "walk"
                        ],
                        "example": "run"
                    },
                    "start_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-11-22T08:30:00Z"
                    },
                    "end_time": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "duration_seconds": {
                        "type": "integer",
                        "example": 1800
                    },
                    "distance_meters": {
                        "type": "integer",
                        "example": 5000
                    },
                    "avg_speed_kmh": {
                        "type": "number",
                        "format": "float",
                        "example": 10.2
                    },
                    "avg_pace": {
                        "type": "number",
                        "format": "float",
                        "example": 5.5
                    },
                    "route": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "lat": {
                                    "type": "number",
                                    "format": "float",
                                    "example": 52.1
                                },
                                "lng": {
                                    "type": "number",
                                    "format": "float",
                                    "example": 21
                                }
                            },
                            "type": "object"
                        },
                        "nullable": true
                    },
                    "notes": {
                        "type": "string",
                        "example": "Evening tempo workout",
                        "nullable": true
                    },
                    "photo_url": {
                        "type": "string",
                        "example": "https://cdn.mini-strava.dev/run.jpg",
                        "nullable": true
                    },
                    "gpx_path": {
                        "type": "string",
                        "example": "activities/1234.gpx",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "AdminStats": {
                "properties": {
                    "period": {
                        "type": "string"
                    },
                    "users_total": {
                        "type": "integer"
                    },
                    "activities_total": {
                        "type": "integer"
                    },
                    "distance_total_km": {
                        "type": "number",
                        "format": "float"
                    },
